<?xml version="1.0"?>
<ruleset name="PrivateBin PHPMD Rules"
         xmlns="http://pmd.sf.net/ruleset/1.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sf.net/ruleset/1.0.0 http://pmd.sf.net/ruleset_xml_schema.xsd"
         xsi:noNamespaceSchemaLocation="http://pmd.sf.net/ruleset_xml_schema.xsd">
    <description>PHPMD configuration for PrivateBin</description>

    <!-- Import des règles de base -->
    <rule ref="rulesets/cleancode.xml">
        <!-- Exclure certaines règles trop strictes -->
        <exclude name="StaticAccess"/>
        <exclude name="BooleanArgumentFlag"/>
    </rule>
    
    <rule ref="rulesets/codesize.xml"/>
    
    <rule ref="rulesets/design.xml"/>
    
    <rule ref="rulesets/naming.xml">
        <!-- Permettre les variables courtes dans certains cas -->
        <exclude name="ShortVariable"/>
    </rule>
    
    <rule ref="rulesets/naming.xml/ShortVariable">
        <properties>
            <!-- Minimum 2 caractères au lieu de 3 -->
            <property name="minimum" value="2"/>
            <!-- Exceptions pour les variables communes -->
            <property name="exceptions" value="i,j,k,id,db,up,me"/>
        </properties>
    </rule>
    
    <rule ref="rulesets/unusedcode.xml"/>

    <!-- Exclure certains fichiers/dossiers -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/node_modules/*</exclude-pattern>
    <exclude-pattern>*/tst/*</exclude-pattern>
    <exclude-pattern>*/data/*</exclude-pattern>
</ruleset>
